{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    The best cars on the internet
{% endblock %}
{% block body %}
    <h1>Our offer</h1>

    <table class="table">
        <tr>
            <th>Make</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        {% for car in cars %}
            <tr>
                <td>{{ car.make }}</td>
                <td>{{ car.name }}</td>
                <td><a href="{{ url('show_car', {id: car.id}) }}">Show details</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
